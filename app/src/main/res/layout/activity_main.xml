<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.networkapplication.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="过滤"
        android:onClick="start_other"/>

    <EditText
        android:id="@+id/input_str"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:gravity="left|top"
        android:padding="4dp"
        android:text=""
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/show_encold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:lines="1"
        android:padding="4dp"
        android:text="gbk"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/need_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:lines="1"
        android:padding="4dp"
        android:text="院#园#潦"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/show_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text=""
        android:textSize="24sp" />

    <Button
        android:id="@+id/start_stop_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="start_stop"
        android:padding="4dp"
        android:text="开始" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="auto_start"
        android:padding="4dp"
        android:text="自启动" />

    <EditText
        android:id="@+id/set_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text=""
        android:textSize="14sp" />

    <Button
        android:onClick="set_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="设置"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:visibility="visible">

        <TextView
            android:id="@+id/show_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
</LinearLayout>
